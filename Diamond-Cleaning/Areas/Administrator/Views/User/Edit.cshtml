@model EditUserViewModel

<form asp-area="Administrator" method="post">
    <h4>Редактирование данных для @Model.Name</h4>
    <br />
    <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>
    <div class="row">
        <label for="name" class="col-sm-2 col-form-label">Логин:</label>
        <div class="col-sm-8">
            <label asp-for="Name">Name*</label>
            <input asp-for="Name" type="text" class="form-control" id="Name" value="@Model.Name">
            <span asp-validation-for="Name" />
        </div>
    </div>
    <br />
    <div class="row">
        <label for="link" class="col-sm-2 col-form-label">Пароль:</label>
        <div class="col-sm-8">
            <label asp-for="NewPassword">Password*</label>
            <input asp-for="NewPassword" type="text" class="form-control" id="LastName" value="@Model.NewPassword">
            <span asp-validation-for="NewPassword" />
        </div>
    </div>
    <br />
    <div class="row">
        <label for="description" class="col-sm-2 col-form-label">Телефон:</label>
        <div class="col-sm-8">
            <label asp-for="Phone">Phone*</label>
            <input asp-for="Phone" type="text" class="form-control" id="Phone" value="@Model.Phone">
            <span asp-validation-for="Phone" />
        </div>
    </div>
    <br />
    <br />
    <button type="submit" class="btn btn-primary" asp-area="Administrator" asp-controller="User" asp-action="GetUsers" asp-route-name="@Model.Name">Сохранить</button>
    <a class="btn btn-outline-primary" asp-area="Administrator" asp-controller="User" asp-action="GetUsers">Отмена</a>
</form>