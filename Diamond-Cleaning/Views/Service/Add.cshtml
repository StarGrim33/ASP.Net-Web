@model ServiceEdit

<form method="post">
    <h4>Добавление товара</h4>
    <br />
    <div class="row">
        <label for="name" class="col-sm-2 col-form-label">название товара:</label>
        <div class="col-sm-8">
            <input name="Name" type="text" class="form-control" id="Name" value="@Model.Name">
        </div>
    </div>
    <br />
    <div class="row">
        <label for="cost" class="col-sm-2 col-form-label">цена товара, руб.:</label>
        <div class="col-sm-8">
            <input name="Cost" type="text" class="form-control" id="Cost" value="@Model.Cost">
        </div>
    </div>
    <br />
    <div class="row">
        <label for="imagePath" class="col-sm-2 col-form-label">изорбражение товара:</label>
        <div class="col-sm-8">
            <input name="ImageLink" type="text" class="form-control" id="ImagePath" value="@Model.ImageLink">
        </div>
    </div>
    <br />
    <div class="row">
        <label for="description" class="col-sm-2 col-form-label">описание товара:</label>
        <div class="col-sm-8">
            <input name="Description" type="text" class="form-control" id="Description" value="@Model.Description">
        </div>
    </div>
    <br />
    <br />
    <button type="submit" class="btn btn-primary" asp-controller="Service" asp-action="Add">Сохранить</button>
    <a class="btn btn-outline-primary" asp-controller="Administrator" asp-action="GetProducts">Отмена</a>
</form>