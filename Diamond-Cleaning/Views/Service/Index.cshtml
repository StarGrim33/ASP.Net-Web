@model Service

@{
    ViewData["Title"] = "Подробности услуги";
}

<div class="container-fluid">
    <div class="col-12 card shadow">
        <img src="@Model.Link" alt="Изображение услуги" />
        <div class="card-body">
            <a style="color:black" href="/service/index/@Model.Id">
                <h5>@Model.Name</h5>
            </a>
            <h5>@Model.Cost</h5>
            <a class="btn btn-dark" href="#" role="button">Добавить в корзину</a>
        </div>
        <p>@Model.Description</p>
        <a class="btn btn-dark" href="/home/index/" role="button">Вернуться на главный экран</a>
</div>
</div>

