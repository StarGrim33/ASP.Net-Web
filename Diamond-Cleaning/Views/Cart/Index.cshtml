@model Cart

@{
    ViewData["Title"] = "Корзина товаров";
}

@if(Model == null)
{
    <h3>
        Корзина пустая
    </h3>
}
else
{
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Цена руб</th>
                        <th>Количество</th>
                        <th>Стоимость руб</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Service.Name</td>
                            <td>@item.Service.Cost</td>
                            <td>@item.Amount</td>
                            <td>@item.Cost</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-danger">
                <h3>Итого: </h3>
                <h3>@Model.Cost</h3>
            </div>
            <div class="text-center">
                <a class="btn btn-primary" href="/home/index" role="button">Продолжить покупки</a>
                <a class="btn btn-success" href="#" role="button">Оформить заказ</a>
            </div>
        </div>
    </div>
}

<h1>Корзина с говном</h1>

