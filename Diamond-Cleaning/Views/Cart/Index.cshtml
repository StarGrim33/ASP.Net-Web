@model CartViewModel

@{
    ViewData["Title"] = "Корзина товаров";
}

@if(Model == null)
{
    <h3>
        Корзина пустая
    </h3>
}
else
{
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Цена руб</th>
                        <th>Количество</th>
                        <th>Стоимость руб</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Service.Name</td>
                            <td>@item.Service.Cost</td>
                            <td>
                                @item.Amount
                                <a class="btn btn-outline-primary btn-sm" href="/cart/add?productId=@item.Service.Id">+</a>
                                <a class="btn btn-outline-primary btn-sm" href="/cart/delete?productId=@item.Service.Id">-</a>
                            </td>
                            <td>@item.Cost</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-danger">
                <h3>Итого: </h3>
                <h3>@Model.Cost</h3>
            </div>
            <div class="text-center">
                <a class="btn btn-outline-success btn-lg" href="/order/index" role="button">Перейти к оформлению</a>
                <a class="btn btn-primary" href="/home/index" role="button">Продолжить покупки</a>
                <!-- Кнопка-триггер модального окна -->
                <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    <i class="bi bi-x-circle">Очистить корзину</i>
                </button>
            </div>
        </div>
    </div>

    <!-- Модальное окно -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Очистка корзины</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                </div>
                <div class="modal-body">
                    Вы уверены, что хотите очистить список?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <a type="button" class="btn btn-primary" asp-controller="Cart" asp-action="Clear">Очистить</a>
                </div>
            </div>
        </div>
    </div>
}
