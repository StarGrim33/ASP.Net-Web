@model Login

<form method="post">
    <h4>Вход</h4>
    <br />
    <div class="row mb-3">
        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
        <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>
        <label for="login" class="col-sm-1 col-form-label">Логин</label>
        <div class="col-sm-3">
            <label asp-for="Name">Электронная почта</label>
            <input name="Name" type="email" class="form-control" id="Name" placeholder="Email">
            <span asp-validation-for="Name">Login</span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="password" class="col-sm-1 col-form-label">Пароль</label>
        <div class="col-sm-3">
            <label asp-for="Password">Пароль</label>
            <input name="Password" type="password" class="form-control" id="password" placeholder="*********">
            <span asp-validation-for="Password">Password</span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm offset">
            <div class="form-check">
                <input name="CheckBox" class="form-check-input" type="checkbox" id="rememberMe">
                <label class="form-check-label" for="rememberMe">
                    Запомнить меня?
                </label>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary" asp-controller="Authorization" asp-action="Login" asp-route-ReturnUrl="@Model.ReturnUrl">Войти</button>
    <button type="submit" class="btn btn-outline-primary" asp-controller="Authorization" asp-action="Register">Зарегистрироваться</button>
</form>