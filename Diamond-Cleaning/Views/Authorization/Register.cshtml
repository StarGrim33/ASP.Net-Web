@model User

<form method="post">
    <h4>Регистрация</h4>
    <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
    <br />
    <div class="row mb-3">
        <label for="login" class="col-sm-1 col-form-label">Логин</label>
        <div class="col-sm-3">
            <label asp-for="Login">Электронная почта</label>
            <input name="Login" type="email" class="form-control" id="login" placeholder="Email">
            <span asp-validation-for="Login">Login</span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="password" class="col-sm-1 col-form-label">Пароль</label>
        <div class="col-sm-3">
            <label asp-for="Password">Пароль</label>
            <input name="Password" type="password" class="form-control" id="password" placeholder="*********">
            <span asp-validation-for="Password"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="password" class="col-sm-1 col-form-label">Повторите пароль</label>
        <div class="col-sm-3">
            <label asp-for="Password">Подтвердить пароль</label>
            <input name="RepeatPassword" type="password" class="form-control" id="ConfirmPassword" placeholder="*********">
            <span asp-validation-for="RepeatPassword">RepeatPassword</span>
        </div>
    </div>
    <button type="submit" class="btn btn-outline-primary" asp-controller="authorization" asp-action="AddNewUser">Зарегистрироваться</button>
</form>